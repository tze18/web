<style>
    .form-group{
        width: 350px;
        margin:10px 20px;
        color:white;
       }
</style>
{{#if msg}}
    <div class="alert alert-{{msg.type}}">{{msg.info}}</div>
{{/if}}

<form method="post">
    <div class="form-group">
        <label for="admin_id">帳號</label>
        <input type="text" class="form-control"
               value="{{addForm.admin_id}}"
               id="admin_id" name="admin_id">
    </div>
    <div class="form-group">
        <label for="pwd">密碼</label>
        <input type="text" class="form-control"
               value="{{addForm.pwd}}"
               id="pwd" name="pwd">
    </div>
    <div class="form-group">
        <label for="addr">地址</label>
        <input type="text" class="form-control"
               value="{{addForm.addr}}"
               id="addr" name="addr">
    </div>
    <button type="submit" class="btn btn-primary" >新增</button>
</form>
